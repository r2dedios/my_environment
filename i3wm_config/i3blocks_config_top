[volume-pulseaudio]
command=~/.config/i3/scripts/volume-pulseaudio
interval=10
SUBSCRIBE=0
signal=1
USE_ALSA_NAME=1
AUDIO_DELTA=5
MUTED_COLOR=#D20000
DEFAULT_COLOR=#1070FF
color=#1070FF

# Date
[calendar]
command=~/.config/i3/scripts/calendar
LABEL= 
DATEFMT=+%Y-%m-%d %H:%M
interval=10
HEIGHT=-10
WIDTH=240

[i3timer]
command=~/go/bin/i3-timer -alarm-command="notify-send 'i3-timer' 'Alarm Elapsed!'; play /usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga"
interval=10

[monitors]
command=~/.config/i3/scripts/monitor_manager
interval=once

[poweroff]
full_text= 
command=i3-msg mode -q " Lock(l)     Exit(e)     Reboot(r)     Poweroff(p)     Suspend(s)"
interval=0
color=#ca0000

