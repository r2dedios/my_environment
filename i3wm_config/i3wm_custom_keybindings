## LAYER 1
bindcode 191 exec i3-msg workspace $ws1;  exec --no-startup-id st
bindcode 192 exec i3-msg workspace $ws1;  exec --no-startup-id st ranger
bindcode 193 exec i3-msg workspace $ws1;  exec --no-startup-id st vim
bindcode 194 exec i3-msg workspace $ws1;  exec --no-startup-id st htop

bindcode 195 exec i3-msg workspace $ws1;  exec --no-startup-id google-chrome --profile-directory="Default"
bindcode 196 exec i3-msg workspace $ws3;  exec --no-startup-id google-chrome --profile-directory="Profile 1"
bindcode 197 exec i3-msg workspace $ws3;  exec --no-startup-id google-chrome --profile-directory="Profile 2"
bindcode 198 exec i3-msg workspace $ws3;  exec --no-startup-id brave-browser
bindcode 199 exec i3-msg workspace $ws1;  exec --no-startup-id i3lock --color 660066 --nofork
bindcode 200 exec i3-msg workspace $ws4;  exec --no-startup-id flatpak run com.spotify.Client
bindcode 201 exec i3-msg workspace $ws1;  exec --no-startup-id flameshot gui
bindcode 202 exec                              --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+1 i3blocks

## LAYER 2
