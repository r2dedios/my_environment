client.focused          #660C0C #A01313 #FFFFFF #B70000   #660C0C
client.focused_inactive #333333 #5F676A #FFFFFF #484E50   #5F676A
client.unfocused        #333333 #222222 #888888 #292D2E   #222222
client.urgent           #2F343A #E0DD00 #000000 #B26800   #B26800
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C
client.background       #FFFFFF




# TOP BAR
bar {
  position       top
  status_command i3blocks -c ~/.config/i3/top_bar.conf
  tray_output    primary

  colors {
    background #111111
    statusline #FFFFFF
    separator  #666666

    focused_workspace  #500000 #900000 #FFFFFF
    active_workspace   #330909 #330909 #FFFFFF
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2F343A #E0DD00 #000000
    binding_mode       #2F343A #E26D00 #000000
  }
}

# BOTTOM BAR
bar {
  id                bottom_bar
  position          bottom
  status_command    i3status --config ~/.config/i3/bottom_bar.conf
  workspace_buttons no
  tray_output       none

  colors {
    background #111111
    statusline #00FF00
    separator  #666666
  }
}

bindsym XF86MonBrightnessUp exec brightnessctl s +10%
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-

exec --no-startup-id feh --bg-fill /opt/wallpaper.jpeg
exec --no-startup-id compton
for_window [class="^.*"] border pixel 0
for_window [class="Yad"] floating enable


bindsym Mod1+BackSpace exec i3lock --color 660066

set $session " Lock(l)     Exit(e)     Reboot(r)     Poweroff(p)     Suspend(s)"
mode $session {
         bindsym e exec --no-startup-id $psst i3-msg exit; mode "default"
         bindsym l exec --no-startup-id $psst i3lock --color 660066 ; mode "default"
         bindsym p exec --no-startup-id $psst systemctl poweroff; mode "default"
         bindsym r exec --no-startup-id $psst systemctl reboot; mode "default"
         bindsym s exec --no-startup-id $psst systemctl suspend; mode "default"

         bindsym q mode "default"
         bindsym Escape mode "default"
}

bindsym Mod1+Shift+s mode $session

set $monitor_laptop "eDP-1"
workspace $ws1 output $monitor_main
workspace $ws2 output $monitor_main
workspace $ws3 output $monitor_sec
workspace $ws4 output $monitor_sec
workspace $ws5 output $monitor_sec
workspace $ws6 output $monitor_sec
workspace $ws7 output $monitor_sec
workspace $ws8 output $monitor_sec
workspace $ws9 output $monitor_sec
workspace $ws10 output $monitor_laptop


# Macro Keyboard bindings
for_window [window_role="^floating$"] floating enable workspace $ws3
# Mute Mic
bindcode 206 exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
